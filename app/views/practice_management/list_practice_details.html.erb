<h3>You have the following Practice Assignments for <%= @case_study.name %> :</h3>

<table class="table table-bordered">
  <tr>
    <th>Assignment Number</th>
    <th></th>
    <th></th>
    <th>Quiz Status</th>
    <th>Document Status</th>


  </tr>
  <% @assignments.each_with_index.each do |assignment, index| %>

      <% if assignment.practice? %>
          <tr>
            <td><%= index %></td>
            <% if @played_doc[assignment.id]>0 %>
                <td><%= link_to image_tag('start_test.png', :size => "40x40"), play_quiz_path(:assignment_id => assignment.id), :title => "Start the test" %></td>
            <% else %>
                <td>Nothing do do.yay!!</td>
            <% end %>
            <td><%= link_to image_tag('tutorials.jpeg', :size => "40x40"), take_tutorials_path(:assignment_id => assignment.id), :title => "View Tutorials" %></td>
            <td>
              <%= @status[assignment.id] %>
            </td>
            <td>

              <%= "#{@played_doc[assignment.id].to_s} Document(s) left" %>


            </td>


          </tr>
      <%end %>
  <% end %>

</table>
<%= link_to "New Practice",start_practice_path(@case_study.id),:class => "btn btn-primary" %>
<%= link_to "Back",practice_landing_page_path,:class => "btn btn-info" %>
