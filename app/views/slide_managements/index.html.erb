<h2>Listing Slides</h2>
<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Name</th>

  </tr>
  <% @slides.each do |slide| %>
      <tr>
        <td><%= slide.id %></td>
      </tr>

  <% end %>

</table>

<%= link_to "Add Title Slide", add_new_slide_path(:slide_layout => 1, :concept_id => @concept.id, :slide_count => @slide_count) %>
<br>

<%= link_to "Add Photo and Bullet list Slide", add_new_slide_path(:slide_layout => 2, :concept_id => @concept.id, :slide_count => @slide_count) %>
<br>

<%= link_to "Add Slidorion Slide", add_new_slide_path(:slide_layout => 3, :concept_id => @concept.id, :slide_count => @slide_count) %>
